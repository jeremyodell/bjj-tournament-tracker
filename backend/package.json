{
  "name": "bjj-tournament-tracker-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/dev-server.ts",
    "dev:setup": "docker compose up -d && sleep 3 && npm run db:create && npm run db:seed",
    "dev:start": "docker compose up -d && npm run dev",
    "db:create": "tsx scripts/create-table.ts",
    "db:seed": "tsx scripts/seed-tournaments.ts",
    "db:reset": "docker compose down -v && docker compose up -d && sleep 3 && npm run db:create && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
    "zod": "^3.24.0",
    "ulid": "^2.3.0",
    "axios": "^1.7.0",
    "express": "^5.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  }
}
