{
  "name": "bjj-tournament-tracker-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/dev-server.ts",
    "dev:setup": "docker compose up -d && sleep 3 && npm run db:create && npm run db:seed",
    "dev:start": "docker compose up -d && npm run dev",
    "db:create": "tsx scripts/create-table.ts",
    "db:seed": "tsx scripts/seed-tournaments.ts",
    "sync": "tsx scripts/sync.ts",
    "db:seed:mock": "tsx scripts/seed-mock.ts",
    "db:reset": "docker compose down -v && docker compose up -d && sleep 3 && npm run db:create && npm run db:seed",
    "clean-users": "node scripts/clean-users.cjs",
    "clean-users:local": "node scripts/clean-users.cjs --local",
    "clean-users:force": "node scripts/clean-users.cjs --force",
    "test": "jest --testPathIgnorePatterns='integration'",
    "test:unit": "jest --testPathIgnorePatterns='integration'",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch --testPathIgnorePatterns='integration'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='integration'",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "sam:build": "sam build",
    "sam:deploy": "sam deploy --guided",
    "sam:deploy:prod": "sam deploy --config-env prod",
    "sam:local:api": "sam local start-api --env-vars env.json",
    "sam:local:invoke:tournaments": "sam local invoke TournamentsFunction --event events/get-tournaments.json --env-vars env.json",
    "sam:local:invoke:sync": "sam local invoke SyncFunction --event events/scheduled-sync.json --env-vars env.json"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.962.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-eventbridge": "^3.962.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@sparticuz/chromium": "^143.0.0",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.0.0",
    "puppeteer-core": "^24.34.0",
    "ulid": "^2.3.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
